{% macro list(request, providers, process, scope=None, auth_params=None) %}

{% for provider in providers %}
{% if provider.id == "openid" %}
{% for brand in provider.get_brands %}
<li>
  <a title="{{brand.name}}" 
     class="socialaccount_provider {{provider.id}} {{brand.id}}" 
     href="{{ provider_login_url(request, provider.id, openid=brand.openid_url, process=process) }}"
     >{{brand.name}}</a>
</li>
{% endfor %}
{% endif %}
<li>
  <a title="{{provider.name}}" class="socialaccount_provider {{provider.id}}" 
     href="{{ provider_login_url(request, provider.id, process=process, scope=scope, auth_params=auth_params) }}">{{provider.name}}</a>
</li>
{% endfor %}
{% endmacro %}
